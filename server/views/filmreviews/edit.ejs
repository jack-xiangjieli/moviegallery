<%- include('../partials/header');  %>
<div class="container">
	<div class="row">
	    <h1 style="text-align: center">Edit <%= filmreview.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
            <form action="/filmreviews/<%= filmreview._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= filmreview.name %>" name="filmreview[name]">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" value="<%= filmreview.image %>" name="filmreview[image]">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" value="<%= filmreview.descripition %>" name="filmreview[descripition]">
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
				
            </form>
			<a href="/filmreviews">Go Back</a>
		</div>
        
	</div>
</div>


<%- include('../partials/footer');  %>